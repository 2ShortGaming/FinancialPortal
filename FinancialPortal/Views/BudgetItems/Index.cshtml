@model IEnumerable<FinancialPortal.Models.BudgetItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<br />
<br />
<br />


<div class="col-12 mb-30">

<p>
    @Html.ActionLink("Create New", "Create")
</p>
    <div class="box">
        <div class="box-head">
            Budget Items
        </div>
        <div class="box-body">
            <div class="table-responsive">
                <table class="table table-vertical-middle table-selectable">

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Budget.OwnerId)
                        </th>
                      
                        <th>
                            @Html.DisplayNameFor(model => model.ItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TargetAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CurrentAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsDeleted)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Budget.OwnerId)
                            </td>
                         
                            <td>
                                @Html.DisplayFor(modelItem => item.ItemName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TargetAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CurrentAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsDeleted)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>